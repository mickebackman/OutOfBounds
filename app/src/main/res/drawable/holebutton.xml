<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Om knappen trycks p책-->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
          <!--  <stroke android:width="1dip" android:color="#5e7974" /> -->
            <gradient android:angle="-90" android:startColor="#BED661" android:endColor="#7AF5F5"  />
        </shape>
    </item>

    <!-- Om knappen 채r fokuserad-->
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <!--<stroke android:width="1dip" android:color="#5e7974" />-->
            <solid android:color="#34DDDD"/>
        </shape>
    </item>



    <!-- Om knappen 채r deaktiverad-->
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <!--  <stroke android:width="1dip" android:color="#5e7974" /> -->
            <gradient android:angle="-90" android:startColor="#DDDDDD" android:endColor="#717D8C"  />
        </shape>
    </item>

    <!-- Om knappen 채r aktiverad-->
    <item android:state_enabled="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <!--  <stroke android:width="1dip" android:color="#5e7974" /> -->
            <gradient android:angle="-90" android:startColor="#BED661" android:endColor="#89E894"  />
        </shape>
    </item>


</selector>