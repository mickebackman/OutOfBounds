
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="se.mikaelbackman.outofbounds.ARHandlerActivity"
    android:visibility="visible">



    <ImageButton
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:background="@android:color/transparent"
        android:onClick="onCancelClick"
        android:src="@drawable/cancel"
        />


    <se.mikaelbackman.outofbounds.ButtonPlus
        style="@style/button"
        android:id="@+id/swingbutton"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:padding="10dp"
        android:background="@drawable/holebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/swingbutton"
        android:onClick="swingFragment"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <se.mikaelbackman.outofbounds.TextViewPlus
        style="@style/custfont"
        android:id="@+id/distancetext"
        android:layout_marginTop="12dp"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:layout_height="123dp"
        android:layout_width="134dp"
        android:text=""
        android:layout_marginLeft="60dp"
        android:layout_alignTop="@+id/flagicon"
        android:layout_alignBottom="@+id/flagicon"
        android:layout_toStartOf="@+id/flagicon"
        android:layout_alignEnd="@+id/flagicon"
        android:layout_gravity="center_horizontal|top">
    </se.mikaelbackman.outofbounds.TextViewPlus>

    <se.mikaelbackman.outofbounds.TextViewPlus
        style="@style/custfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/strokecount"
        android:layout_gravity="right|bottom"
        android:gravity="right"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="60dp"
        android:text=""></se.mikaelbackman.outofbounds.TextViewPlus>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flagicon"
        android:layout_gravity="left|top"
        android:src="@drawable/flag_icon"
        android:layout_marginLeft="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/strokeicon"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/golf_club_icon_white"
        android:layout_gravity="right|bottom" />


</FrameLayout>